<div class="new_question_button">
  <%= link_to "New Question", new_question_path %>
</div>

<div class="posts">
  <% if @questions.empty? %>
    Questions will appear here
  <% end %>
  <% @questions.each do |question| %>
    <div class="post">
      <h2 class="title">
        <%= link_to question.title, question %>
      </h2>
      <p class="date">
       <b> Published at:</b>
        <%= time_ago_in_words(question.created_at) %>
        <b>By:</b>
        <%= question.user.email %>
      </p>
    </div>
  <% end %>
</div>
