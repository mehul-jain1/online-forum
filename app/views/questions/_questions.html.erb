<% if questions.empty? %>
  Requests will appear here
<% end %>
<% questions.each do |question| %>
  <div class="post">
    <h2 class="title">
      <%= link_to question.title, question %>
    </h2>
    <p class="date">
     <b> Published at:</b>
      <%= time_ago_in_words(question.created_at) %>
      <b>By:</b>
      <%= question.user.email %>
    </p>
  </div>
<% end %>